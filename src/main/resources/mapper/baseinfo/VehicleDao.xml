<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cq.anbu.modules.baseinfo.dao.VehicleDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cq.anbu.modules.baseinfo.entity.VehicleEntity" id="vehicleMap">
        <result property="id" column="id"/>
        <result property="palteNo" column="palte_no"/>
        <result property="driver" column="driver"/>
        <result property="loadingModel" column="loading_model"/>
        <result property="shippedQuantity" column="shipped_quantity"/>
        <result property="belongArea" column="belong_area"/>
        <result property="comment" column="comment"/>
        <result property="createAt" column="create_at"/>
        <result property="createBy" column="create_by"/>
        <result property="updateAt" column="update_at"/>
        <result property="updateBy" column="update_by"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <select id="queryObject" resultType="cq.anbu.modules.baseinfo.entity.VehicleEntity">
        select * from t_vehicle where id = #{value}
    </select>

    <select id="queryList" resultType="cq.anbu.modules.baseinfo.entity.VehicleEntity">
        select * from t_vehicle
        <where>
            <if test="palteNo != null and palteNo.trim() != ''">
                and `palte_no` like concat('%',#{palteNo},'%')
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from t_vehicle
    </select>

    <insert id="save" parameterType="cq.anbu.modules.baseinfo.entity.VehicleEntity" useGeneratedKeys="true" keyProperty="id">
        insert into t_vehicle
        (
        `palte_no`,
        `driver`,
        `loading_model`,
        `shipped_quantity`,
        `belong_area`,
        `comment`,
        `create_at`,
        `create_by`,
        `update_at`,
        `update_by`,
        `is_delete`
        )
        values
        (
        #{palteNo},
        #{driver},
        #{loadingModel},
        #{shippedQuantity},
        #{belongArea},
        #{comment},
        #{createAt},
        #{createBy},
        #{updateAt},
        #{updateBy},
        #{isDelete}
        )
    </insert>

    <update id="update" parameterType="cq.anbu.modules.baseinfo.entity.VehicleEntity">
        update t_vehicle
        <set>
            <if test="palteNo != null">`palte_no` = #{palteNo},</if>
            <if test="driver != null">`driver` = #{driver},</if>
            <if test="loadingModel != null">`loading_model` = #{loadingModel},</if>
            <if test="shippedQuantity != null">`shipped_quantity` = #{shippedQuantity},</if>
            <if test="belongArea != null">`belong_area` = #{belongArea},</if>
            <if test="comment != null">`comment` = #{comment},</if>
            <if test="createAt != null">`create_at` = #{createAt},</if>
            <if test="createBy != null">`create_by` = #{createBy},</if>
            <if test="updateAt != null">`update_at` = #{updateAt},</if>
            <if test="updateBy != null">`update_by` = #{updateBy},</if>
            <if test="isDelete != null">`is_delete` = #{isDelete}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from t_vehicle where id = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from t_vehicle where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>